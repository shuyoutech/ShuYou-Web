{
  // https://nuxt.com/docs/guide/concepts/typescript
  "files": [],
  "references": [
    {
      "path": "./.nuxt/tsconfig.app.json"
    },
    {
      "path": "./.nuxt/tsconfig.server.json"
    },
    {
      "path": "./.nuxt/tsconfig.shared.json"
    },
    {
      "path": "./.nuxt/tsconfig.node.json"
    }
  ],
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ],
      "~~/*": [
        "./*"
      ],
      "@@/*": [
        "./*"
      ],
      "assets/*": [
        "./assets/*"
      ],
      "public/*": [
        "./public/*"
      ]
    },
    "types": [
      "@nuxt/types",
      "@nuxtjs/tailwindcss",
      "vue"
    ]
  },
  "include": [
    "./components/**/*",
    "./layouts/**/*",
    "./pages/**/*",
    "./plugins/**/*",
    "./utils/**/*",
    "./types/**/*",
    "./app.vue",
    "./error.vue"
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
